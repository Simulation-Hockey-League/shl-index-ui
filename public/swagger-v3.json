        },
        "primaryAssist": {
          "$ref": "#/definitions/ScoringPlayer"
        },
        "secondaryAssist": {
          "$ref": "#/definitions/ScoringPlayer"
        },
        "goalType": {
          "type": "string",
          "enum": ["ES", "PP", "SH", "ES, ENG"],
          "example": "ES"
        },
        "shotQuality": {
          "type": "number",
          "description": "Shot quality tier (0-4) with 4 being highest quality",
          "minimum": 0,
          "maximum": 4,
          "example": 2
        }
      }
    },
    "BoxscoreGoalie": {
