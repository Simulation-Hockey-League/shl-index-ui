            }
          }
        },
        "stars": {
          "type": "object",
          "properties": {
            "star1": {
              "$ref": "#/definitions/StarPlayer"
            },
            "star2": {
              "$ref": "#/definitions/StarPlayer"
            },
            "star3": {
              "$ref": "#/definitions/StarPlayer"
            }
          }
        },
        "periodByPeriodStats": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "home": {
                "type": "object",
                "properties": {
                  "goals": {
                    "type": "number"
                  },
                  "shots": {
                    "type": "number"
